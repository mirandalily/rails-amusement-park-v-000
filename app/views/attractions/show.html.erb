<div class="center">
  <div class="pic">
    <%= image_tag("http://www.allthingsclipart.com/05/amusement.park.05.jpg", height: '250')  %>
  </div>
  <div class="info">
    <p><%= content_tag(:strong, "Name:") %> <%= @attraction.name %></p>
    <p><%= content_tag(:strong, "Total Number of Users: ") %> <%= @attraction.users.size %></p>
    <p><%= content_tag(:strong, "Ticket Requirement:") %> <%= @attraction.tickets %></p>
    <p><%= content_tag(:strong, "Height Requirement:") %> <%= @attraction.min_height %> inches</p>
    <p><%= content_tag(:strong, "Nausea Rating:") %> <%= @attraction.nausea_rating %></p>
    <p><%= content_tag(:strong, "Happiness Rating: ") %> <%= @attraction.happiness_rating %></p>
    <% if current_user.admin %>
      <p><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
    <% else %>
      <%= form_for(@ride) do |f| %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= button_tag "Go on this ride" %>
      <% end %>
    <% end %>
    <%= link_to "Back", attractions_path %>
  </div>
</div>
